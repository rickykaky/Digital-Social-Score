# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Model Configuration
TOXICITY_MODEL=facebook/roberta-hate-speech-dynabench-r4-target
SPACY_MODEL=en_core_web_sm
DEVICE=cpu

# GDPR Configuration
ANONYMIZE_BY_DEFAULT=true
DEFAULT_ANONYMIZATION_METHOD=mask

# Data Directories
DATA_DIR=./data
LOG_DIR=./logs

# Security
MAX_TEXT_LENGTH=5000
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Logging
LOG_LEVEL=INFO
